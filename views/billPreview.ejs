<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bill Preview</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen p-6">
  <div class="max-w-md mx-auto bg-white shadow-md rounded-xl p-6">
    <h2 class="text-2xl font-bold text-center mb-4">üßæ Bill Preview</h2>

    <table class="w-full table-auto border mb-4">
      <thead>
        <tr class="bg-gray-200 text-left">
          <th class="p-2 border">Item</th>
          <th class="p-2 border">Qty</th>
          <th class="p-2 border">Rate</th>
          <th class="p-2 border">Amount</th>
        </tr>
      </thead>
      <tbody>
        <% bill.items.forEach(item => { %>
          <tr>
            <td class="p-2 border"><%= item.name %></td>
            <td class="p-2 border"><%= item.quantity %></td>
            <td class="p-2 border">‚Çπ<%= item.price %></td>
            <td class="p-2 border">‚Çπ<%= item.quantity * item.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-right mb-2">
      <p class="text-sm">Total: ‚Çπ<%= bill.total %></p>
      <p class="text-sm">Discount: <%= bill.discount %>%</p>
      <p class="text-lg font-bold">Final Total: ‚Çπ<%= bill.finalTotal.toFixed(2) %></p>
    </div>

    <% if (typeof pdfPath !== 'undefined') { %>
      <div class="text-center mt-4">
        <a href="<%= pdfPath %>" download>
          <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
            ‚¨áÔ∏è Download PDF
          </button>
        </a>
      </div>
    <% } %>

    <div class="text-center mt-4">
      <a href="/billing">
        <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
          üßæ New Bill
        </button>
      </a>
    </div>
  </div>
</body>
</html>
