<!DOCTYPE html>
<html>
<head>
  <title>Bill - SSK Enterprises</title>
  <style>
    body {
      font-family: monospace;
      width: 58mm;
      margin: 0 auto;
    }
    .bill {
      padding: 10px;
      border: 1px dashed #444;
    }
    h2, p {
      text-align: center;
      margin: 0;
    }
    .line {
      display: flex;
      justify-content: space-between;
      margin-bottom: 2px;
    }
    hr {
      border-top: 1px dashed #444;
      margin: 5px 0;
    }
  </style>
</head>
<body>
  <div class="bill">
    <h2>SRI SAI KRISHNA ENTERPRISES</h2>
    <p>Beside TDP Office, Main Road, Badangi</p>
    <p>Phone: 9494789161</p>
    <hr />

    <% bill.items.forEach(item => { %>
      <div class="line"><b><%= item.name %></b> <span><%= item.quantity %> x ₹<%= item.baseRate %></span></div>
      <% if (item.discount > 0) { %>
        <div class="line">Discount: <%= item.discount %>%</div>
      <% } %>
    <% }); %>

    <hr />
    <div class="line"><strong>Total</strong> <span>₹<%= bill.total.toFixed(2) %></span></div>
    <% if (bill.discount > 0) { %>
      <div class="line"><strong>Discount</strong> <span><%= bill.discount %>%</span></div>
    <% } %>
    <div class="line"><strong>Final</strong> <span><b>₹<%= bill.finalTotal.toFixed(2) %></b></span></div>
    <hr />
    <p>Thank You! Visit Again.</p>
  </div>
</body>
</html>
